.footer
  background-image url('../img/general/bg_body.png')
  text-align center
  color violet_dark
  padding-bottom 30px

  .container
    background-color white
    padding-bottom 30px

  &__phone
    @extend .triviaslabblack
    font-size 76px
    line-height 1
    letter-spacing 2.4px

  &__address
    @extend .triviaslabblack
    font-size 42px
    line-height 1
    letter-spacing 2.9px
    margin-bottom 10px

  &__time
    @extend .triviaslabblack
    font-size 42px
    line-height 1
    letter-spacing 0.7px
    margin-bottom 8px

    sup
      font-size 26px
      text-decoration underline

  &__bankets
    @extend .triviaslabblack
    font-size 42px
    line-height 1
    letter-spacing 1.1px
    margin-bottom 17px

  &__bottom
    display flex
    flex-direction row
    justify-content space-between
    padding 0 50px
    @extend .helvetica
    font-size 14px

  &__design

    span
      display inline-block
      margin-right 13px

    a
      position relative
      top -4px
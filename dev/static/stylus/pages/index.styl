.index-page

  .main

    &__banner
      margin-bottom 34px

      a
        display block

      img
        max-width 100%
        border-radius 13px

    &__suggestions
      margin-bottom 34px

    .suggestions

      &__heading
        text-align center
        margin-bottom 20px

      &__list
        display flex
        flex-direction row
        justify-content space-between

      &__item
        display flex
        flex-direction column
        align-items center
        width 374px
        background-size 100%
        background-repeat no-repeat
        background-position top center

        &:nth-child(1)
          background-image: url('../img/general/suggestion-bg-1.png')

        &:nth-child(2)
          background-image: url('../img/general/suggestion-bg-2.png')

        &:nth-child(3)
          background-image: url('../img/general/suggestion-bg-3.png')
          background-position 0 -60px

      &__name
        display flex
        flex-direction row
        align-items center
        color violet_dark
        font-size 44px
        line-height 53px
        text-align center
        height 155px
        margin-bottom 15px

        @extend .triviaslabmedium

      &__photo
        height 280px
        width 100%
        margin-bottom 29px

      &__btn
        text-align center

        a
          display inline-block
          background-color yellow
          color white
          text-transform uppercase
          @extend .triviaslabblack
          font-size 35px
          line-height 37px
          padding 10px 41px 1px 43px
          position relative
          left 6px
          border-radius 10px

          &::after
            content ''
            position absolute
            top 4px
            left 5px
            right 4px
            bottom 3px
            border 1px dotted white
            border-radius 10px

    &__places
      display flex
      flex-direction row
      justify-content space-between
      //margin-left 7px
      margin-top 39px

    &__about
      width 787px
      display flex
      flex-direction row
      justify-content space-between
      border 2px dotted violet_dark
      padding 11px 15px 15px 22px
      border-radius 20px

      .text
        width 480px

        &__heading
          margin-bottom 14px

      .images
        width 252px

        &__list
          padding-top 10px

        &__item
          width 252px
          height 150px
          margin-bottom 10px
          border-radius 10px

        img
          max-width 100%

    &__banners
      width 376px
      height 100%

      img
        max-width 100%

      .banners

        &__list
          display flex
          flex-direction column
          justify-content space-between
          height 100%

        &__item
          margin-bottom 19px

          &:last-child
            margin-bottom 0

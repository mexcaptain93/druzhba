.menu-page

  .menu
    padding-top 30px

    &__title
      text-align center
      margin-bottom 36px

    &__subtitle
      margin-bottom 10px

      h3
        font-size 63px


    &__list
      display flex
      flex-wrap wrap
      flex-direction row
      align-items flex-end
      margin-bottom 18px

    &__item
      width 275px
      margin-right 30px
      margin-bottom 32px

      &:nth-child(4n)
        margin-right 0





  .product

    &__name
      font-size 22px
      line-height 26px
      color violet_dark
      @extend .triviaslabmedium
      text-align center

    &__image
      width 275px
      height 215px
      background-position center center
      background-repeat no-repeat
      background-size cover